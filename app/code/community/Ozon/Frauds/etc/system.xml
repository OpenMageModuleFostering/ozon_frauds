<?xml version="1.0" encoding="UTF-8"?>
<config>
	<tabs>
		<ozon translate="label">
			<label>Ozon</label>
			<sort_order>300</sort_order>
		</ozon>
	</tabs>
    <sections>
        <frauds translate="label">
            <label>Frauds</label>
            <tab>ozon</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<services translate="label">
					<label>Ozon Frauds module configuration</label>
					<frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                    	<enabled translate="label">
                        	<label>Enable module in frontoffice</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    	</enabled>
                    	<testpage translate="label comment">
                        	<label>Enable test controller</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[If enabled, a test page is available <a href='/index.php/ozonfrauds/test/' target='_blank'>here</a>]]>
                            </comment>
                        </testpage>
                        <base_url translate="label">
                            <label>Base URL for Webservices</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </base_url>
                        <webapp_id>
                        	<label>Webapp ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </webapp_id>
                        <api_token>
                        	<label>User's API token</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_token>
                        <api_token_secret>
                        	<label>User's API token secret</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_token_secret>
					</fields>
				</services>
            </groups>
        </frauds>
    </sections>
</config>